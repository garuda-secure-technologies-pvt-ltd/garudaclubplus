    protected static Window getWindow(Component parent) {
        if (parent == null) {
            return new JFrame();
        } else if (parent instanceof Frame || parent instanceof Dialog) {
            return (Window) parent;
        } else {
            return getWindow(parent.getParent());
        }
    }

    public static DisplayPurchaseOrderList getDialog(Component parent, AppView app) {

        Window window = getWindow(parent);

        DisplayPurchaseOrderList dP;

        if (window instanceof Frame) {
            dP = new DisplayPurchaseOrderList((Frame) window, app);
        } else {
            dP = new DisplayPurchaseOrderList((Dialog) window, app);
        }

        return dP;
    }

    public int showDialog(List<purchase> list) throws BasicException {
        initComponents();
        this.plist = list;
        list.add(0, null);
        pono = new ComboBoxValModel(plist);
        jComboBox1.setModel(pono);       
        this.setVisible(true);
        return resultok;

    }

