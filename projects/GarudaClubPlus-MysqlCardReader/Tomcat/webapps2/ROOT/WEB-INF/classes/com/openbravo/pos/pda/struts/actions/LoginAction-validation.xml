<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.dtd">
<validators>

	<field name="bean.searchkey">
        <field-validator type="requiredstring">
            <message key="email.error.empty">Membership number cannot be empty</message>
        </field-validator>
    </field>
    
    <field name="bean.password">
        <field-validator type="requiredstring">
            <message key="email.error.empty">Password cannot be empty</message>
        </field-validator>
        <field-validator type="stringlength">
                    <param name="minLength">8</param>
                    <param name="trim">true</param>
                    <message key="moreAboutMe.error.minlength"> New password Must be more than 8 characters </message>
		</field-validator>
    </field>
	    
</validators>