    private void GeneratebttnActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_GeneratebttnActionPerformed
        // TODO add your handling code here:
        try {
            if ( enddatetxt.getText().length() > 0 && location != null) {
                generateReport(getDate(enddatetxt.getText()), location);
            } else {
                JOptionPane.showMessageDialog(this, "select fromdate,todate and warehouse", "incomplte form", JOptionPane.WARNING_MESSAGE);
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
}//GEN-LAST:event_GeneratebttnActionPerformed
    
    
