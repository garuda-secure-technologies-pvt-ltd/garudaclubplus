    public void load() throws BasicException{
        frmodel = new FacilityApprovalRitesModel();
        List list1 = frmodel.loadinstanceofcardfacilities(m_App,0);
        facmodel = new ComboBoxValModel(list1);
        jComboBox1.setModel(facmodel);
        List<FacilityApprovalRitesModel.AllUsersLine> flist=frmodel.loadinstanceofallusers(m_App);
        aumodel=new AllUsersListModel(flist);
        jList1.setModel(aumodel);      
        
    }

