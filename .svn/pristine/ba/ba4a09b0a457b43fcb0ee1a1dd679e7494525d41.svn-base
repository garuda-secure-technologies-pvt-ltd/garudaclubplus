    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:
        try{
            int row=jList1.getSelectedIndex();
            if(row>=0){
            FacilityApprovalRitesModel.CardConfirmationFacilitiesline cfline = (CardConfirmationFacilitiesline) jComboBox1.getSelectedItem();
            if(cfline==null){
            FacilityApprovalRitesModel.AllUsersLine aulist= (AllUsersLine) aumodel.getElementAt(row);
            String uid = aulist.getId();
            String id = cfline.getId();
            new PreparedSentence(m_App.getSession(), "UPDATE FACILITYCARDCONFIRM SET ROLE=ROLE"+"#"+"? WHERE ID=?", new SerializerWriteBasic(new Datas[]{Datas.STRING,Datas.STRING})).exec(new Object[]{uid,id});
         }else{
                JOptionPane.showMessageDialog(this, "Select Facility to map");

            }
            }else{
                JOptionPane.showMessageDialog(this, "Select user to map ");

            }
        }catch(Exception e){
            e.printStackTrace();
        }
        


    }//GEN-LAST:event_jButton2ActionPerformed

