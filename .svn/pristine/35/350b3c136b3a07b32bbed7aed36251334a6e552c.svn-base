    private void genarateReport()
    {
        Map reportparam = new HashMap();
        //sameer adding company name and address
        reportparam.put("comname", m_App.getSession().getCompanyName());
        reportparam.put("comaddr", m_App.getSession().getCompanyAddress());
        reportparam.put("date",new Date());
        DataSourceMemberSummary ds = new DataSourceMemberSummary(mamodel.getMemcat());
        DataSourceProvider data1 = new DataSourceProvider();
        data1.setDataSource(ds);
        JasperPrint jp = JasperReportNew.runReport(m_App, "./reports/com/openbravo/reports/MembersSummary.jrxml", reportparam, false, data1, true, null);
    }

    private void genarateReportforaddress()
    {
        Map reportparam = new HashMap();
        //sameer adding company name and address
        reportparam.put("comname", m_App.getSession().getCompanyName());
        reportparam.put("comaddr", m_App.getSession().getCompanyAddress());
        reportparam.put("date",new Date());
        List<MemberStatementModel.addressline> addr = new ArrayList<MemberStatementModel.addressline>();
        addr = mamodel.getMemaddr();
        DataSourceMemberAddrss ds = new DataSourceMemberAddrss(addr);
        DataSourceProvider data1 = new DataSourceProvider(addr);
        data1.setDataSource(ds);
        JasperPrint jp = JasperReportNew.runReport(m_App, "./reports/com/openbravo/reports/MemberAddress.jrxml", reportparam, false, data1, true, null);
    }


